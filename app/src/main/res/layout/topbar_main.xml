<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="69px"
    android:paddingLeft="22px"
    android:paddingRight="22px">

    <TextView
        android:id="@+id/tv_topbar_date"
        android:layout_width="248px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="yyyy-mm-dd hh:mm:ss"
        android:textColor="#666666"
        android:textSize="24px" />

    <ImageView
        android:id="@+id/iv_topbar_wifi"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_topbar_date"
        android:src="@mipmap/iv_wifi_three" />
    <ImageView
        android:id="@+id/iv_topbar_netline"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_topbar_wifi"
        android:src="@mipmap/iv_netline_true" />

    <TextView
        android:id="@+id/tv_topbar_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="当前有X条尚未上传"
        android:textColor="#333333"
        android:textSize="28px" />

    <TextView
        android:id="@+id/tv_topbar_operation"
        android:layout_width="105px"
        android:layout_height="41px"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15px"
        android:background="@drawable/bg_round_operation"
        android:gravity="center"
        android:text="操作"
        android:textSize="24px" />
</RelativeLayout>